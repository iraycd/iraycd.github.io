---
layout: nil
---
{
"posts" : [
{% for post in site.posts %}
    {
        "title": "{{ post.title }}",
        "href": "{{ post.url }}", 
        "featured_image" : "{{post.featured_image}}",
        "words": "{% for tag in post.tags %} {{tag | downcase }}{% endfor %}{% for category in post.categories %} {{category | downcase | replace: ' ', '_'}}{% endfor %}"
 }
{% endfor %}
]
}
